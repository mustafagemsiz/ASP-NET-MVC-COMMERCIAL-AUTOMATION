@model OnlineTicariOtomasyon.Models.Model.Cari
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<div style="margin-top:10px;">
    <ol class="breadcrumb mb-12">
        <li class="breadcrumb-item active">
            <h3>Cari Profil</h3>
        </li>
    </ol>
    <br />
    @using (Html.BeginForm("CariPanelEdit", "CariPanel"))
    {
        <table style="text-align:center;" class="table table-bordered table-hover">
            <tr>
                <td><label><strong>Mail Adres: @HttpContext.Current.User.Identity.Name</strong></label></td>
            </tr>
            <tr>
                <td> @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" })</td>
            </tr>
            <tr>
                <td>@Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })</td>
            </tr>            
            <tr>
                <td>@Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })</td>
            </tr>                        
            <tr>
                <td>@Html.TextBoxFor(x => x.CariSifre, new { @class = "form-control" })</td>
            </tr>
        </table>

        <button class="btn btn-warning">Bilgilerimi Güncelle</button>
    }
</div>
