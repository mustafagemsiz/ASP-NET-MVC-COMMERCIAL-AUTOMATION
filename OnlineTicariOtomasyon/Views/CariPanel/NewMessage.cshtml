@model OnlineTicariOtomasyon.Models.Model.Mesaj
@{
    ViewBag.Title = "NewMessage";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}



<meta charset="utf-8">

<meta http-equiv="X-UA-Compatible" content="IE=edge">

<title>AdminLTE 3 | Compose Message</title>

<!-- Tell the browser to be responsive to screen width -->

<meta name="viewport" content="width=device-width, initial-scale=1">

<!-- Font Awesome -->

<link rel="stylesheet" href="~/Files/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">

<!-- Ionicons -->

<link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

<!-- Theme style -->

<link rel="stylesheet" href="~/Files/AdminLTE-3.0.4/dist/css/adminlte.min.css">

<!-- summernote -->

<link rel="stylesheet" href="~/Files/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.css">

<!-- Google Font: Source Sans Pro -->

<link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">



<div class="hold-transition sidebar-mini">



    <!-- Content Header (Page header) -->

    <section class="content">
        <ol class="breadcrumb mb-12" style="margin-top:10px;">
            <li class="breadcrumb-item active">
                <h3>Mesaj Oluştur</h3>
            </li>
        </ol>
        <div class="container-fluid">

            <div class="row mb-2">

                <div class="col-sm-6">


                </div>



            </div>

        </div><!-- /.container-fluid -->

    </section>

    <!-- Main content -->

    <section class="content">

        <div class="container-fluid">

            <div class="row">

                <div class="col-md-3">

                    <a href="~/CariPanel/Message/" class="btn btn-primary btn-block mb-3">Geri dön</a>

                    <div class="card">

                        <div class="card-header">

                            <h3 class="card-title">Klasörler</h3>

                            <div class="card-tools">

                                <button type="button" class="btn btn-tool" data-card-widget="collapse">

                                    <i class="fas fa-minus"></i>

                                </button>

                            </div>

                        </div>

                        <div class="card-body p-0">

                            <ul class="nav nav-pills flex-column">

                                <li class="nav-item active">

                                    <a href="~/CariPanel/Message/" class="nav-link">

                                        <i class="fas fa-inbox"></i> Gelen Kutusu

                                        <span class="badge bg-primary float-right">@ViewBag.gelenMesaj</span>

                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="~/CariPanel/MessageGet/" class="nav-link">

                                        <i class="far fa-envelope"></i> Gönderilmiş Postalar

                                        <span class="badge bg-success float-right">@ViewBag.gidenMesaj</span>

                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="#" class="nav-link">

                                        <i class="far fa-file-alt"></i> Taslak

                                        <span class="badge bg-warning float-right">65</span>


                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="#" class="nav-link">

                                        <i class="fas fa-filter"></i> Gereksiz Postalar

                                        <span class="badge bg-danger float-right">65</span>

                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="#" class="nav-link">

                                        <i class="far fa-trash-alt"></i> Çöp Kutusu

                                        <span class="badge bg-gradient-pink float-right">65</span>


                                    </a>

                                </li>

                            </ul>

                        </div>

                        <!-- /.card-body -->

                    </div>

                    <!-- /.card -->

                    <div class="card">

                        <div class="card-header">

                            <h3 class="card-title">Filtreler</h3>

                            <div class="card-tools">

                                <button type="button" class="btn btn-tool" data-card-widget="collapse">

                                    <i class="fas fa-minus"></i>

                                </button>

                            </div>

                        </div>

                        <div class="card-body p-0">

                            <ul class="nav nav-pills flex-column">

                                <li class="nav-item">

                                    <a href="#" class="nav-link">

                                        <i class="far fa-circle text-danger"></i>

                                        Önemli

                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="#" class="nav-link">

                                        <i class="far fa-circle text-warning"></i> Promosyon

                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a href="#" class="nav-link">

                                        <i class="far fa-circle text-primary"></i>

                                        Sosyal Medya

                                    </a>

                                </li>

                            </ul>

                        </div>

                        <!-- /.card-body -->

                    </div>

                    <!-- /.card -->

                </div>

                <!-- /.col -->

                <div class="col-md-9">

                    <div class="card card-outline">

                        <div class="card-header">

                            <h3 class="card-title">Yeni Mesaj Oluştur</h3>

                        </div>

                        <!-- /.card-header -->
                        <form method="post">
                            <div class="card-body">

                                <div class="form-group">

                                    <input type="email" class="form-control" name="Alici" placeholder="Kime:" required>

                                </div>

                                <div class="form-group">

                                    <input input="text" class="form-control" name="Konu" placeholder="Konu:" required>

                                </div>

                                <div class="form-group">

                                    <textarea id="compose-textarea" name="Icerik" class="form-control" style="height: 300px" required minlength="20"></textarea>

                                </div>

                                @*<div class="form-group">

            <div class="btn btn-default btn-file">

                <i class="fas fa-paperclip"></i> Dosya yükle

                <input type="file" name="attachment">

            </div>

        </div>*@
                                <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>

                            </div>
                        </form>

                    

                        <!-- /.card-body -->



                        <!-- /.card-footer -->

                    </div>

                    <!-- /.card -->

                </div>

                <!-- /.col -->

            </div>

            <!-- /.row -->

        </div><!-- /.container-fluid -->

    </section>

    <!-- /.content -->
    <!-- ./wrapper -->
    <!-- jQuery -->

    <script src="~/Files/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>

    <!-- Bootstrap 4 -->

    <script src="~/Files/AdminLTE-3.0.4/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- AdminLTE App -->

    <script src="~/Files/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>

    <!-- AdminLTE for demo purposes -->

    <script src="~/Files/AdminLTE-3.0.4/dist/js/demo.js"></script>

    <!-- Summernote -->

    <script src="~/Files/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.min.js"></script>

    <!-- Page Script -->

    <script>
        $(function () {

            //Add text editor

            $('#compose-textarea').summernote()

        })</script>

</div>



