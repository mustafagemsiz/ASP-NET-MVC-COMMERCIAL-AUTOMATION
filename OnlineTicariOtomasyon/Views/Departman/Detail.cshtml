@using OnlineTicariOtomasyon.Models.Model
@model List<Personel>
@{
    ViewBag.Title = "Departman Detay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<ol class="breadcrumb mb-6">
    <li class="breadcrumb-item active">
        @ViewBag.ad Departmanı
    </li>
</ol>
<table class="table table-bordered table-striped table-hover" id="example">
    <thead style="text-align:center;">
        <tr>
            <th scope="col">Personel Ad Soyad</th>
            <th scope="col">Adres</th>
            <th scope="col">Telefon</th>
            @foreach (var item in Model)
            {
                if (@item.DepartmanId==2)
                {
                    <th scope="col">Satışlar</th>
                }
                else
                {
                    <th scope="col"></th>
                }

            }

        </tr>
    </thead>
    <tbody style="text-align:center;">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PersonelAd @item.PersonelSoyad</td>
                <td>@item.PersonelAdres</td>
                <td>@item.PersonelTelefon</td>
                @if (item.DepartmanId == 2)
                {
                    <td>
                        @Html.ActionLink("Detay", "PersonalDetail", new { id = item.PersonelId }, new { @class = "btn btn-info" })
                    </td>
                }
                else
                {
                    <td></td>
                }


            </tr>
        }

    </tbody>
</table>
