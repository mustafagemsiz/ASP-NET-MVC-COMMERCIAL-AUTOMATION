@model OnlineTicariOtomasyon.Models.Model.Departman

@{
    ViewBag.Title = "Departman Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6" style="margin:auto;">

    @using (Html.BeginForm("Edit", "Departman", FormMethod.Post))
    {
        <div>
            @Html.HiddenFor(x => x.DepartmanId)
            <label style="font-weight:bold;">Kategori Ad</label>
            @Html.TextBoxFor(x => x.DepartmanAd, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.DepartmanAd, null, new { @class = "text-danger" })
            <br />
            <button style="margin-top:5px;" class="btn btn-success">Kaydet</button>
        </div>
    }
</div>


