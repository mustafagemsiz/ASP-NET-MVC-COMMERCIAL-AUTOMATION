@using OnlineTicariOtomasyon.Models.Model
@model List<SatisHareket>
@{
    ViewBag.Title = "Personel Satış Detay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered table-striped table-hover" id="example">
    <thead style="text-align:center;">
        <tr>
            <th scope="col">Ürün</th>
            <th scope="col">Personel</th>
            <th scope="col">Cari</th>
            <th scope="col">Adet</th>
            <th scope="col">Fiyat</th>
            <th scope="col">Toplam</th>
            <th scope="col">Tarih</th>

        </tr>
    </thead>
    <tbody style="text-align:center;">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Urun.UrunAd</td>
                <td>@item.Personel.PersonelAd @item.Personel.PersonelSoyad</td>
                <td>@item.Cari.CariAd @item.Cari.CariSoyad</td>
                <td>@item.Adet</td>
                <td>@item.Fiyat</td>
                <td>@item.ToplamTutar</td>
                <td>@Convert.ToDateTime(item.Tarih).ToShortDateString()</td>
            </tr>
        }

    </tbody>
</table>