@model IEnumerable<OnlineTicariOtomasyon.Models.Model.MarkaSayisiListele>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Ürün Marka Durum</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka Ad</th>
                    <th>Progress</th>
                    <th style="width: 40px">Ürün Sayisi</th>
                </tr>
            </thead>
            <tbody>
                @{
                int id = 0;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@{id++;} @id.</td>
                        <td>@item.Marka</td>

                        @if (item.Sayi == 1)
                        {

                            <td>
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-danger" style="width: 10%"></div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-danger">@item.Sayi</span>
                            </td>
                        }
                        @if (item.Sayi == 2)
                        {
                            <td>
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 20%"></div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-warning">@item.Sayi</span>
                            </td>
                        }
                        @if (item.Sayi ==3)
                        {
                            <td>
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-primary" style="width: 50%"></div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-primary">@item.Sayi</span>
                            </td>
                        }
                        @if (item.Sayi >= 4)
                        {
                            <td>
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: 70%"></div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-success">@item.Sayi</span>
                            </td>
                        }
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
