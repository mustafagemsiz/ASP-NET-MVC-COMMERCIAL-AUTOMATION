@model OnlineTicariOtomasyon.Models.Model.Cascading

@{
    ViewBag.Title = "Cascading İşlemi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>

    $(function () {

        $('#DrpKategori').change(function () {

            var id = $('#DrpKategori').val();

            $.ajax({

                url: '/Kategori/UrunListele',

                data: { p: id },

                type: "POST",

                dataType: "Json",

                success: function (data) {

                    console.log(data);

                    $('#DrpUrun').empty();

                    for (var i = 0; i < data.length; i++) {

                        $('#DrpUrun').append("<option value='" + data[i].Value + "'>" + data[i].Text + "</Option>");

                    }

                }

            });

        });

    });

</script>
<div style="margin:10px;">
    <div style="text-align:center;">
        <h2>Kategoriler - Ürünler</h2>
    </div>
    <div class="content">
        @Html.Label("Kategoriler")
        @Html.DropDownList("DrpKategori", Model.Kategoriler, "----Kategori Seçiniz----", new { @class = "form-control" })
        <br />
        @Html.Label("Ürünler")
        @Html.DropDownList("DrpUrun", Model.Kategoriler, "----Ürün Seçiniz----", new { @class = "form-control" })
    </div>
</div>

