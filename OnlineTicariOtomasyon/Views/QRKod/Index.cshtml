
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<ol class="breadcrumb mb-6">
    <li class="breadcrumb-item active">
        QR Kod Oluşturucu
    </li>
</ol>
<div>
    @using (Html.BeginForm("Index", "QRKod", FormMethod.Post))
    {
        <input type="text" name="kod"  class="form-control" style="margin-bottom:10px;"/>

        <input type="submit" value="QR Kod Oluştur"  class="btn btn-success"/>
    }
        <br />
    @if (ViewBag.kareKodImage!=null)
    {
        <img src="@ViewBag.kareKodImage" alt="" style="width:400px; height:400px;" />
    }
</div>

