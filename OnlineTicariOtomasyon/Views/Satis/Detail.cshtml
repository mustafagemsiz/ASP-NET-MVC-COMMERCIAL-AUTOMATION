@using OnlineTicariOtomasyon.Models.Model
@model List<SatisHareket>

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script>

    $(document).ready(function () {

        var table = $('#example').DataTable({

            lengthChange: false,

            buttons: ['copy', 'excel', 'csv', 'pdf', 'colvis']

        });


        table.buttons().container()

            .appendTo('#example_wrapper .col-md-6:eq(0)');

    });

</script>

<table class="table table-striped table-bordered dt-responsive nowrap myDataTables">
    <thead style="text-align:center;">
        <tr>
            <th scope="col">Personel</th>
            <th scope="col">Ürün</th>
            <th scope="col">Cari</th>
            <th scope="col">Adet</th>
            <th scope="col">Fiyat</th>
            <th scope="col">Toplam</th>
            <th scope="col">Tarih</th>
            <th scope="col">İşlemler</th>

        </tr>
    </thead>
    <tbody style="text-align:center;">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Personel.PersonelAd @item.Personel.PersonelSoyad</td>
                <td>@item.Urun.UrunAd</td>
                <td>@item.Cari.CariAd @item.Cari.CariSoyad</td>
                <td>@item.Adet</td>
                <td>@item.Fiyat</td>
                <td>@item.ToplamTutar</td>
                <td>@Convert.ToDateTime(item.Tarih).ToShortDateString()</td>
                <td><a href="#" class="btn btn-default" style="color:white; background-color:cornflowerblue">Yazdır</a></td>
            </tr>
        }

    </tbody>
</table>
